@model Shared.MemberDTO

<style>
    body {
        margin: 0;
        font-family: 'Arial', sans-serif;
        background: linear-gradient(90deg, #FFD286, #FF6474, #7DA2FF);
        height: 100vh;
    }

    .btn-primary {
        background-color: #FF6474;
        color: #fff;
        padding: 0.8rem 1.5rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        text-decoration: none;
        display: inline-block;
        margin: 0.5rem;
    }

        .btn-primary:hover {
            background-color: #e85563;
        }
</style>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Member´s details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Update", "Update", new { id = Model.MemberId }, new { @class = "btn-primary" })
    @Html.ActionLink("Delete", "Delete", new { id = Model.MemberId }, new { @class = "btn-primary" })
</div>

